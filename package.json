{
  "name": "openmapstyles",
  "version": "0.1.0",
  "license": "BSD-3-Clause",
  "description": "A free set of Mapbox GL basemap styles for everyone",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "validate": "./node_modules/.bin/gl-style-validate style.json",
    "diff": "bash -c 'diff <(./node_modules/.bin/gl-style-format style.json) style.json'",
    "format": "./node_modules/.bin/gl-style-format style.json | ./node_modules/.bin/sponge style.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mon-petit-cloud/openmapstyles.git"
  },
  "keywords": [
    "maps",
    "cartography",
    "mapbox-gl-js",
    "mapbox-gl"
  ],
  "author": "",
  "bugs": {
    "url": "https://github.com/mon-petit-cloud/openmapstyles/issues"
  },
  "homepage": "https://github.com/mon-petit-cloud/openmapstyles#readme",
  "devDependencies": {
    "@mapbox/mapbox-gl-style-spec": "^13.13.0",
    "husky": "^4.2.3",
    "sponge": "^0.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate && npm run format && git add style.json"
    }
  }
}
